<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend the Payment Provider form to show Square settings -->
    <record id="view_payment_provider_form_inherit_square" model="ir.ui.view">
        <field name="name">payment.provider.form.square</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
              <group string="Square Settings">
                  <field name="square_application_id" modifiers="{'invisible': [('provider','!=','square')]}"/>
                  <field name="square_access_token" password="True" modifiers="{'invisible': [('provider','!=','square')]}"/>
                  <field name="square_location_id" modifiers="{'invisible': [('provider','!=','square')]}"/>
                  <field name="square_sandbox" modifiers="{'invisible': [('provider','!=','square')]}"/>
              </group>
          </xpath>
        </field>
    </record>
</odoo>
